<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:geekui="http://schemas.android.com/apk/res-auto"
    xmlns:autofit="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity"
    android:id="@+id/drawer">



    <LinearLayout

        android:id="@+id/frame_container22"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        android:background="#ffffff">
        <android.support.v7.widget.Toolbar
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:id="@+id/toolbar">

        </android.support.v7.widget.Toolbar>
        <FrameLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="top|center"
            android:id="@+id/frame_container">


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorPrimary">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:background="#ffffff"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:id="@+id/profile1"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/profile2" />
                </LinearLayout>

                <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@color/colorPrimary"
                android:orientation="vertical"
                    android:layout_marginBottom="5dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"

                    android:orientation="horizontal">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:id="@+id/purchase_order_in_activity_main"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:background="@drawable/homes"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp" />

                        <views.TypefaceTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            geekui:customTypeface="fonts/AllerDisplay.ttf"
                            android:text="Your DeliveryNow Address"
                            android:layout_marginTop="5dp"
                            android:gravity="center"
                            android:maxLines="2"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            autofit:minTextSize="8sp"
                            android:textStyle="bold"
                            android:textColor="@color/client_colour_grey_dark"/>



                    </LinearLayout>
                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:background="@color/icons_8_muted_blueblack_dark"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"/>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:id="@+id/stock_in__in_main_activity">
                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginBottom="5dp"
                            android:background="@drawable/orderh"
                            android:layout_marginTop="5dp" />

                        <views.TypefaceTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Order History"
                            android:textStyle="bold"
                            geekui:customTypeface="fonts/AllerDisplay.ttf"
                            android:layout_marginTop="5dp"
                            android:gravity="center"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@color/client_colour_grey_dark"/>
                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/icons_8_muted_blueblack_dark"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="2dp" />

                ///////////////  sale and reports
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:id="@+id/sale_button_in_main_Activity">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:background="@drawable/newor"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp" />

                        <views.TypefaceTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            geekui:customTypeface="fonts/AllerDisplay.ttf"
                            android:text="New Order"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:layout_marginTop="10dp"
                            android:textColor="@color/client_colour_grey_dark"/>

                    </LinearLayout>
                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:background="@color/icons_8_muted_blueblack_dark"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"/>
                    <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:id="@+id/reportslayout"
                    android:layout_weight="1"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/usersub"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp" />

                        <views.TypefaceTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Manage Sub Users"
                        geekui:customTypeface="fonts/AllerDisplay.ttf"
                        android:textStyle="bold"
                            android:gravity="center"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/client_colour_grey_dark"/>
                </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/icons_8_muted_blueblack_dark"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="2dp" />

                //////////////////  payment and crm
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                      <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:id="@+id/add_new_product">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/card"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp" />

                          <views.TypefaceTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Payment"
                        android:layout_marginTop="10dp"
                        geekui:customTypeface="fonts/AllerDisplay.ttf"
                        android:textStyle="bold"
                              android:gravity="center"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/client_colour_grey_dark"/>

                </LinearLayout>
                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:background="@color/icons_8_muted_blueblack_dark"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:id="@+id/crm"
                        android:gravity="center">
                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:background="@drawable/mailbox"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp" />

                        <views.TypefaceTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Change DeliveryNow Address"
                            android:layout_marginTop="10dp"
                            android:textStyle="bold"
                            android:gravity="center"
                            geekui:customTypeface="fonts/AllerDisplay.ttf"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@color/client_colour_grey_dark"/>
                    </LinearLayout>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/colorPrimary"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="2dp" />


                ///////////////////// add new products


            </LinearLayout>
            </LinearLayout>


        </FrameLayout>
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/RecyclerView"
        android:layout_width="320dp"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:background="#969696"
        android:scrollbars="vertical">

    </android.support.v7.widget.RecyclerView>
</android.support.v4.widget.DrawerLayout>
